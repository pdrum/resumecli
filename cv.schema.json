{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["name", "title", "contact", "experience"],
  "properties": {
    "name": { "type": "string" },
    "title": { "type": "string" },
    "contact": {
      "type": "object",
      "required": ["email", "github"],
      "properties": {
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "github": { "type": "string" },
        "location": { "type": "string" }
      },
      "additionalProperties": false
    },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["company", "title", "start", "description"],
        "properties": {
          "company": { "type": "string" },
          "title": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": ["string", "null"] },
          "description": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["school", "degree", "year"],
        "properties": {
          "school": { "type": "string" },
          "degree": { "type": "string" },
          "year": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
